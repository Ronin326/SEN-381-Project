@page
@model CampusLearn_Web_App.Pages.RegisterPageModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<script src="~/scripts/LoginAndRegisterValidation.js" asp-append-version="true"></script>


<div class="form-box">
    <form class="form">
        <p class="form-title">Register your account</p>
        <div class="input-container">
            <input type="text" required class="input" placeholder="Full Name">
            <input type="email" required id="email" class="input" placeholder="Email">
            <input type="password" required class="input" placeholder="Password">
        </div>
        <button type="submit" class="submit" onclick="ValidForm()">Sign up</button>
        <div class="signup-link">
            <p>Have an account? <a asp-page="/LoginPage">Login here</a></p>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}