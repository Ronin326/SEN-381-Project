@page
@model CampusLearn_Web_App.Pages.Forum.PublicForumModel
@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #0b0b0f;
        color: #e0e0e0;
        font-family: 'Segoe UI', sans-serif;
    }

    h2 {
        color: #00c8ff;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .forum-container {
        max-width: 950px;
        margin: 40px auto;
        padding: 20px;
    }

    .filter-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #14141b;
        padding: 10px 20px;
        border-radius: 10px;
        margin-bottom: 25px;
        border: 1px solid #00c8ff33;
    }

    select {
        background-color: #1e1e26;
        color: #fff;
        border: 1px solid #333;
        border-radius: 6px;
        padding: 5px 8px;
    }

    .create-post {
        background-color: #15151c;
        border: 1px solid #ff66cc;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 0 10px rgba(255, 102, 204, 0.15);
    }

    .create-post input,
    .create-post textarea {
        background-color: #1e1e26;
        color: #fff;
        border: 1px solid #333;
    }

    .create-post button {
        background-color: #ff66cc;
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 8px 18px;
        transition: 0.2s;
    }

    .create-post button:hover {
        background-color: #ff4bb5;
    }

    .post-card {
        background-color: #14141b;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        border-left: 4px solid #00c8ff;
        box-shadow: 0 2px 10px rgba(0, 200, 255, 0.1);
    }

    .post-title {
        font-size: 1.3rem;
        color: #00c8ff;
        font-weight: 600;
    }

    .post-meta {
        font-size: 0.9rem;
        color: #999;
        margin-bottom: 10px;
    }

    .post-actions {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 8px;
    }

    .like-btn {
        color: #00c8ff;
        background: transparent;
        border: none;
        cursor: pointer;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 5px;
        transition: color 0.2s;
    }

    .like-btn:hover {
        color: #00aadd;
    }

    .comment-section {
        margin-top: 15px;
        padding-left: 15px;
        border-left: 2px solid #ff66cc;
    }

    .comment {
        margin-bottom: 10px;
        background-color: #1a1a22;
        border-radius: 8px;
        padding: 10px;
    }

    .comment small {
        color: #aaa;
        font-size: 0.8rem;
    }

    .comment-form textarea {
        background-color: #1e1e26;
        color: white;
        border: 1px solid #444;
    }

    .comment-form button {
        background-color: #00c8ff;
        border: none;
        padding: 6px 14px;
        border-radius: 6px;
        font-weight: 500;
    }

    .comment-form button:hover {
        background-color: #00aadd;
    }

    .like-btn {
        color: #00c8ff;
        background: transparent;
        border: none;
        cursor: pointer;
        font-size: .95rem;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 6px;
        border-radius: 6px;
        transition: background .15s, transform .05s;
    }

    .like-btn:hover {
        background: #00c8ff1a;
    }

    .like-btn:active {
        transform: scale(.98);
    }
</style>

<div class="forum-container">
    <h2>Public Forum</h2>
    <p class="text-secondary mb-4">Course discussions and insights in one place.</p>

    <!-- Filter Bar -->
    <div class="filter-bar">
        <form method="get" class="d-flex align-items-center">
            <label for="moduleSelect" class="me-2 text-light">Filter by Module:</label>
            <select id="moduleSelect" name="moduleId" onchange="this.form.submit()">
                <option value="">All Modules</option>
                @foreach (var module in Model.Modules)
                {
                    <option value="@module.ModuleID" selected="@(Model.SelectedModuleId == module.ModuleID)">
                        @module.ModuleName
                    </option>
                }
            </select>
        </form>
    </div>

    <!-- Create Post -->
    <div class="create-post">
        <h5 style="color:#ff66cc;">Create a New Post</h5>
        <form method="post" asp-page-handler="AddPost">
            <div class="mb-2">
                <input class="form-control" name="Title" placeholder="Enter post title" required />
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="Content" rows="3" placeholder="Write your message..."
                    required></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label text-light">Assign to Module (optional):</label>
                <select class="form-select bg-dark text-light border-secondary" name="SelectedModuleId">
                    <option value="">None</option>
                    @foreach (var module in Model.Modules)
                    {
                        <option value="@module.ModuleID">@module.ModuleName (@module.ModuleCode)</option>
                    }
                </select>
            </div>
            <button type="submit">Post</button>
        </form>
    </div>

    <!-- Posts -->
    @if (Model.ForumPosts != null && Model.ForumPosts.Any())
    {
        @foreach (var post in Model.ForumPosts)
        {
            <div class="post-card">
                <div class="post-title">@post.Title</div>
                <div class="post-meta">
                    Posted by <strong>@(post.User?.FirstName ?? "System")</strong> on
                    @post.CreationDate.ToString("dd MMM yyyy HH:mm")
                </div>

                <p>@post.Content</p>

                <!-- POST actions (put under the post content) -->
                <div class="post-actions">
                    <form method="post" asp-page="/Forum/PublicForum" asp-page-handler="UpvotePost"
                        asp-route-moduleId="@Model.SelectedModuleId">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="postId" value="@post.PostID" />
                        <button type="submit" class="btn btn-outline-info btn-sm">
                            üëç @post.Upvotes
                        </button>
                    </form>
                </div>
                <div class="comment-section mt-3">
                    <h6 style="color:#ff66cc;">Comments</h6>

                    @if (post.Comments != null && post.Comments.Any())
                    {
                        @foreach (var comment in post.Comments)
                        {
                            <div class="comment">
                                <strong>@(comment.User?.FirstName ?? "Anonymous")</strong>
                                <p>@comment.Comment</p>
                                <small>@comment.CreationDate.ToString("dd MMM yyyy HH:mm")</small>
                                <form method="post" asp-page="/Forum/PublicForum" asp-page-handler="UpvoteComment"
                                    asp-route-moduleId="@Model.SelectedModuleId">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="commentId" value="@comment.CommentID" />
                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                        üíô @comment.Upvotes
                                    </button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No comments yet.</p>
                    }

                    <!-- Add Comment -->
                    <form method="post" asp-page-handler="AddComment" class="comment-form mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="PostId" value="@post.PostID" />
                        <textarea class="form-control mb-2" name="Content" placeholder="Add a comment..." rows="2"></textarea>
                        <button type="submit">Reply</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted">No posts yet.</div>
    }
</div>