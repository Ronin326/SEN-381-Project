@page
@model CampusLearn_Web_App.Pages.TestChatModel
@{
    ViewData["Title"] = "Chatbot";
}

<div class="chat-container">
    <div class="chat-header">
        <h2>ðŸ¤– CampusLearn Chatbot</h2>
        <span class="status-dot"></span><span>Online</span>
    </div>

    <div id="chat-box" class="chat-box">
        @foreach (var msg in Model.Messages)
        {
            <div class="chat-message @(msg.IsUser ? "user-msg" : "bot-msg")">
                <div class="bubble">@msg.Content</div>
            </div>
        }
    </div>

    <form method="post" class="chat-input">
        <input type="text" name="UserMessage" value="@Model.UserMessage" placeholder="Type a message..." autocomplete="off" />
        <button type="submit" class="send-btn">âž¤</button>
    </form>
</div>

<style>
    /* === Overall Layout === */
    body {
        background: radial-gradient(circle at top, #1e1f25, #121317);
        font-family: 'Segoe UI', Roboto, sans-serif;
        color: #eee;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .chat-container {
        display: flex;
        flex-direction: column;
        width: 90%;
        max-width: 700px;
        height: 85vh;
        background: #1a1b20;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 0 30px rgba(0,0,0,0.6);
        position: relative;
    }

    /* === Header === */
    .chat-header {
        background: linear-gradient(90deg, #0057b7, #4a90e2);
        color: white;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        font-size: 1.1rem;
        letter-spacing: 0.5px;
    }

    .status-dot {
        width: 10px;
        height: 10px;
        background-color: #4cff79;
        border-radius: 50%;
        margin-right: 6px;
        box-shadow: 0 0 6px #4cff79;
    }

    /* === Chat box === */
    .chat-box {
        flex: 1;
        overflow-y: auto;
        padding: 1.2rem;
        display: flex;
        flex-direction: column;
        gap: 10px;
        scroll-behavior: smooth;
    }

    /* Scrollbar styling */
    .chat-box::-webkit-scrollbar {
        width: 6px;
    }
    .chat-box::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 4px;
    }

    /* === Messages === */
    .chat-message {
        display: flex;
        width: 100%;
        animation: fadeIn 0.3s ease;
    }

    .chat-message .bubble {
        max-width: 70%;
        padding: 0.8rem 1rem;
        border-radius: 14px;
        line-height: 1.4;
        word-wrap: break-word;
        font-size: 0.95rem;
    }

    .user-msg {
        justify-content: flex-end;
    }

    .user-msg .bubble {
        background: #0057b7;
        color: #fff;
        border-bottom-right-radius: 4px;
    }

    .bot-msg {
        justify-content: flex-start;
    }

    .bot-msg .bubble {
        background: #2a2b31;
        color: #eee;
        border-bottom-left-radius: 4px;
    }

    /* === Input area === */
    .chat-input {
        display: flex;
        align-items: center;
        padding: 0.8rem 1rem;
        background: #18191e;
        border-top: 1px solid #2b2b31;
        position: sticky;
        bottom: 0;
    }

    .chat-input input {
        flex: 1;
        background: #22232a;
        border: none;
        border-radius: 12px;
        color: #eee;
        padding: 0.7rem 1rem;
        font-size: 0.95rem;
        outline: none;
        transition: background 0.2s ease;
    }

    .chat-input input:focus {
        background: #2c2d35;
    }

    .send-btn {
        margin-left: 10px;
        background: #0057b7;
        border: none;
        color: #fff;
        padding: 0.6rem 1rem;
        border-radius: 12px;
        cursor: pointer;
        font-size: 1rem;
        transition: background 0.2s ease, transform 0.1s ease;
    }

    .send-btn:hover {
        background: #1d6ce2;
        transform: scale(1.05);
    }

</style>
