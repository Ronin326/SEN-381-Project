@page
@model CampusLearn_Web_App.Pages.LoginPageModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<script src="~/scripts/LoginAndRegisterValidation.js" asp-append-version="true"></script>

<form class="form" method="post">
    <p class="form-title">Sign in to your account</p>
    
    @if (!string.IsNullOrEmpty(Model?.ErrorMessage))
    {
        <div class="error-message" style="color: red; margin-bottom: 15px; text-align: center; padding: 10px; background: #ffe6e6; border-radius: 5px;">
            @Model.ErrorMessage
        </div>
    }

    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="success-message" style="color: green; margin-bottom: 15px; text-align: center; padding: 10px; background: #e6ffe6; border-radius: 5px;">
            @ViewData["SuccessMessage"]
        </div>
        
        @* User will be automatically redirected to their dashboard *@
    }
    
    <div class="input-container">
        <input asp-for="Email" type="email" required placeholder="Email (@@belgiumcampus.ac.za)">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="input-container">
        <input asp-for="Password" type="password" required placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="submit">
        Sign in
    </button>

    <p class="form-title" style="font-size: 1em; margin-top: 20px;">📝 Demo Accounts</p>
    
    <div class="input-container" style="margin-bottom: 8px; background: rgba(255, 255, 255, 0.1); padding: 10px; border-radius: 4px;">
        👑 Admin<br>
        <small style="color: #aaa;">demo.admin@belgiumcampus.ac.za</small><br>
        <small style="color: #aaa;">Password: Admin</small>
    </div>

    <div class="input-container" style="margin-bottom: 8px; background: rgba(255, 255, 255, 0.1); padding: 10px; border-radius: 4px;">
        🎓 Tutor<br>
        <small style="color: #aaa;">demo.tutor@belgiumcampus.ac.za</small><br>
        <small style="color: #aaa;">Password: Tutor</small>
    </div>

    <div class="input-container" style="margin-bottom: 8px; background: rgba(255, 255, 255, 0.1); padding: 10px; border-radius: 4px;">
        📚 Student<br>
        <small style="color: #aaa;">demo.student@belgiumcampus.ac.za</small><br>
        <small style="color: #aaa;">Password: Student</small>
    </div>

    <p class="signup-link" style="margin-top: 20px;">
        No account? 
        <a asp-page="/RegisterPage">Register here</a>
    </p>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
